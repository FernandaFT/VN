{% embed 'partials/base.html.twig' %}
	{% set collection = page.collection() %}
	
	{% block content %}
	<div class="jewelry-page-title">
		<div class="limiter">
			<h1>{{ page.title }}</h1>
		</div>
	</div>
	<div class="limiter">
		<div class="wrapper-categories">

			<div id="listing">
				<ul class="holder">
					{% for child in collection %}
						<li class="jewel-list">
			        		{% include 'jewel-node.html.twig' with {'category':page, 'page':child, 'truncate':true} %}
			    		</li>
			  		{% endfor %}
			  	</ul>
			</div>
		</div>
	</div>
	{% endblock %}

{% endembed %}
